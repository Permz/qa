<p id="notice"><%= notice %></p>

<h1>Question</h1>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<h2>Comments</h2>

<% unless @question.comments %>
    <div id="comments">
      <%= render @question.comments %>
    </div>
<% else %>
  <p>no comments</p>
<% end %>

<%= render 'comments/new', question: @question %>

<%= link_to 'Edit', edit_question_path(@question) %>
<%= link_to 'Back', questions_path %>
